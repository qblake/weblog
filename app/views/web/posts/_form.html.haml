= simple_form_for @post, html: { class: 'form-horizontal' } do |f|
  = f.input :state_event, as: :state_event
  = f.input :picture, as: :image_preview
  = f.input :picture_cache, as: :hidden
  = f.input :title
  = f.input :text

  .form-actions
    = f.button :submit, class: 'btn'
    = link_to t('.cancel'), posts_path, class: 'btn'
